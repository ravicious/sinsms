%html
  %head
    %meta{:"http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    %title SinSMS
    %link{:rel => 'stylesheet', :href => url_for('/style.css'), :type => 'text/css'}
  %body
    #wrapper
      - [:error, :notice].each do |flash_sym|
        - if flash[flash_sym]
          %div{:id => "flash_#{flash_sym.to_s}", :class => 'flash_message'}
            = flash[flash_sym]
      %h1 SinSMS
      %form{:action => url_for('/send'), :method => 'post', :name => 'sms', :class => 'simple_form'}
        %p
          %label{:for => 'number'} Numer
          %input{:type => 'text', :id => 'number', :name => 'sms[number]'}

        %p
          %label{:for => 'from'} Nadawca
          %input{:type => 'text', :id => 'from', :name => 'sms[from]'}

        %p
          %label{:for => 'message'} Wiadomość
          %textarea{:id => 'message', :name => 'sms[message]'}

        %p
          %input{:type => "submit", :value => "Wyślij"}
